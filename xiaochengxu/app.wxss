@import 'style/weui.wxss';
@import 'style/zm_css.wxss';
@import 'style/font_icon.wxss';
page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

/* 顶部导航 */
.zm-navbar-area{
  display: flex;
  flex-direction: row; 
  background-color: #fff;
  border-bottom: 1px solid #ccc;
}
.zm_navbar{
  border-right: 1rpx solid #eee;
   width: 250rpx;
   padding-left: 20rpx;
}