<!--pages/jiaofei/jiaofei.wxml-->
<view class="weui-form-preview">
            <view class="weui-form-preview__hd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">付款总计</view>
                    <view class="weui-form-preview__value_in-hd">¥{{rw.fbfy}}</view>
                </view>
            </view>
            <view class="weui-form-preview__bd">
               <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">任务</view>
                    <view class="weui-form-preview__value">{{rw.title}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">基础费用</view>
                    <view class="weui-form-preview__value">¥{{rw.rwflfy}}</view>
                </view>
             
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">置顶费用</view>
                    <view class="weui-form-preview__value">¥{{rw.zdfy}}</view>
                </view>

                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">转发赏金</view>
                    <view class="weui-form-preview__value">¥{{rw.zshangjin}}</view>
                </view>
            </view>
            <view class="weui-form-preview__ft">
                <button class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active" style='background-color:#fff;' bindtap='fukuan' >付款</button>
            </view>
        </view>
